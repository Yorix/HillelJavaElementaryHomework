<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<VBox prefWidth="350.0" spacing="20.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.yorix.hillel.java_elementary.blackjack_task25_32.controllers.StartWindowController">
    <ListView fx:id="playersListView" prefHeight="110.0"/>
    <AnchorPane>
        <HBox alignment="CENTER" layoutY="10.0" prefHeight="60.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <Button id="btnAddRemove" mnemonicParsing="false" onAction="#addNewPlayer"
                    text="+"/>
            <Button id="btnAddRemove" mnemonicParsing="false"
                    onAction="#removeLastPlayer" text="-"/>
        </HBox>
        <HBox alignment="CENTER_RIGHT" layoutX="80.0" layoutY="2.0" prefHeight="60.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <Label text="%lbl.num_of_rounds">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Label>
            <ComboBox fx:id="cmbBoxRnd">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="1"/>
                        <String fx:value="2"/>
                        <String fx:value="3"/>
                        <String fx:value="4"/>
                        <String fx:value="5"/>
                        <String fx:value="6"/>
                        <String fx:value="7"/>
                        <String fx:value="8"/>
                        <String fx:value="9"/>
                        <String fx:value="10"/>
                    </FXCollections>
                </items>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </ComboBox>
        </HBox>
    </AnchorPane>
    <AnchorPane>
        <Button mnemonicParsing="false" onAction="#createGame" text="%btn.start_game" AnchorPane.leftAnchor="0.0"/>
    </AnchorPane>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
